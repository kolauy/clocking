<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverworkActivity"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0px"
    android:layout_weight="9">

    <TableLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="申请人"
                android:layout_column="0"
                android:gravity="end"
                android:padding="10dp" />
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="刘经理"
                android:id="@+id/overwork_request_id"
                android:layout_column="1"
                android:padding="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="10dp"
                android:gravity="end"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="加班人员"
                android:layout_column="0"
                android:textStyle="bold" />

            <ListView
                android:layout_width="0px"
                android:layout_height="330dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:id="@+id/overwork_people"
                android:layout_column="1"
                android:choiceMode="multipleChoiceModal"
                android:clickable="true"
                android:drawSelectorOnTop="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="10dp"
                android:gravity="end"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="日期"
                android:layout_column="0" />
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2016-04-11"
                android:id="@+id/overwork_day"
                android:layout_column="1" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="10dp"
                android:gravity="end"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="时间段"
                android:layout_column="0" />
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="18:00:00"
                android:id="@+id/overwork_starttime"
                android:layout_column="1" />
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="--"
                android:layout_column="2" />
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="22:00:00"
                android:id="@+id/overwork_stoptime"
                android:layout_column="3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="10dp"
                android:gravity="end"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="审核"
                android:id="@+id/textView7"
                android:layout_column="0" />
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="部门审核经理"
                android:id="@+id/overwork_audit_id"
                android:layout_column="1" />

        </TableRow>

    </TableLayout>

</ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="提交"
        android:id="@+id/overwork_button" />
</LinearLayout>



