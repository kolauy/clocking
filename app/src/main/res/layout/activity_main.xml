<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:orientation="vertical"
    tools:context="com.genisky.clocking.MainActivity">

        <LinearLayout
            android:background="@drawable/company"
            android:id="@+id/company_background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="618">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_margin="5pt"
                android:layout_height="20pt">

                <Space
                    android:layout_width="0pt"
                    android:layout_weight="10"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0pt"
                    android:layout_weight="80"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="打卡系统 - 用户信息"
                    android:id="@+id/textView"
                    android:textStyle="bold"
                    style="@style/Base.TextAppearance.AppCompat.Large"
                    android:singleLine="true"
                    android:gravity="center_vertical|center_horizontal" />
                <ImageButton
                    android:layout_width="0pt"
                    android:layout_weight="10"
                    android:layout_height="match_parent"
                    android:src="@drawable/settings"
                    android:id="@+id/main_setting" />

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40pt"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/people"
                android:id="@+id/user_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="tester (市场部）"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/user_name"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="北京亿中景科技发展有限公司"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:id="@+id/company_name"
                android:gravity="center_vertical|center_horizontal" />

        </LinearLayout>
        <GridView
            android:id="@+id/gridView"
            android:background="#eeeeee"
            android:layout_width="fill_parent"
            android:layout_height="0pt"
            android:columnWidth="70dp"
            android:numColumns="auto_fit"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_weight="382" />
    </LinearLayout>
